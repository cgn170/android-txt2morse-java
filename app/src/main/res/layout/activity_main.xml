<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.freexd.txt2morse.MainActivity">

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:id="@+id/tableLayout">
        <TableRow
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:text="Publicidad"
                android:textAllCaps="true"
                android:textSize="15sp"
                />
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_use_listener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswTextOn="   Flashlight   "
                app:kswTextOff="   Sound   "

                />
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_edit_text_text"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                   />

                <EditText
                    android:id="@+id/et_text"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_edit_text_morse"
                    android:textAllCaps="true"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_morse"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"

            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert" />
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"

            >

            <LinearLayout
                android:id="@+id/linearLayoutMainMenu"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:gravity="center_horizontal"
>

                <ImageButton
                    android:id="@+id/bt_menu_reproducir_play"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    />

                <ImageButton
                    android:id="@+id/bt_menu_reproducir_pause"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    />

                <ImageButton
                    android:id="@+id/bt_menu_reproducir_stop"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    />

                <ImageButton
                    android:id="@+id/bt_menu_reproducir_loop"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="20dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    />

                <ImageButton
                    android:id="@+id/bt_menu_reproducir_download"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:text="Publicidad"
                android:textAllCaps="true"
                android:textSize="15sp"
                />
        </TableRow>
    </TableLayout>


</RelativeLayout>
